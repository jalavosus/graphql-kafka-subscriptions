{
  "name": "@jalavosus/graphql-kafka-subscriptions",
  "version": "0.1.7",
  "description": "Apollo graphql subscription over Kafka protocol",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "jest --watchAll",
    "build": "tsc --project tsconfig.json",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jalavosus/graphql-kafka-subscriptions.git"
  },
  "keywords": [
    "graphql",
    "kafka",
    "apollo",
    "subscriptions"
  ],
  "author": "James Alavosus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jalavosus/graphql-kafka-subscriptions/issues"
  },
  "homepage": "https://github.com/jalavosus/graphql-kafka-subscriptions#readme",
  "jest": {
    "roots": [
      "<rootDir>/src/test"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/node": "^13.7.7",
    "bunyan": "^1.8.12",
    "graphql-subscriptions": "^1.1.0",
    "iterall": "^1.3.0",
    "kafkajs": "^1.12.0",
    "kafkajs-snappy": "^1.1.0",
    "snappy": "^6.2.3",
    "uuid": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
